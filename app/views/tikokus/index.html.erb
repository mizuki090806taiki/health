<p id="notice"><%= notice %></p>

<h1>遅刻理由</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>遅刻理由</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tikokus.each do |tikoku| %>
      <tr>
        <td><%= tikoku.riyuu %></td>
        <td><%= link_to '参照', tikoku %></td>
        <td><%= link_to '編集', edit_tikoku_path(tikoku) %></td>
        <td><%= link_to '削除', tikoku, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '遅刻理由追加', new_tikoku_path,{class: "btn btn-default btn-sm btn-block"} %>
