<h1>生徒</h1>

<table>
  <thead>
    <tr>
      <th>学年</th>
      <th>番号</th>
      <th>性別</th>
      <th>氏名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @seitos.each do |seito| %>
      <tr>
        <td><%= seito.gakunenn_id %></td>
        <td><%= seito.banngou %></td>
        <td><%= seito.seibetu %></td>
        <td><%= seito.simei %></td>
        <td><%= link_to '参照', seito %></td>
        <td><%= link_to '編集', edit_seito_path(seito) %></td>
        <td><%= link_to '削除', seito, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

