      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :カウンセリングスケジュール %>
    <%= form.select :kaunsering_schedule_id, KaunseringSchedule.all.map { |k| [k.yoyakuzikan, k.id] },{include_blank: true},{class: "form-control"} %>
