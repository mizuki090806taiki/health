         <%= form.select :seito_id, Seito.all.map { |s| [s.simei, s.id] },{include_blank: true},{class: "form-control"} %>
         </div>

    <% when 2 %>

    <% when 3 %>
      <div class="field">
      <%= form.label :生徒 %>
      <%= form.select :seito_id, Seito.where(id: session[:seitoid]).map { |s| [s.simei, s.id] },{include_blank: true},{class: "form-control"} %>
      </div>
    <% end %>   
  
  <div class="field">
    <%= form.label :メモ %>
