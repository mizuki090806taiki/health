<%= form_with(model: comment, local: true) do |form| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :コメント %>
    <%= form.text_area :comment, {id: :comment_comment,class: "form-control", :placeholder => "コメントを入力"} %>
  </div>
    
  <div class="field">
  <%= form.label :日付 %>
  <%= form.date_select :hiduke, id: :comments_hiduke %>
</div>


  <div class="field">
    <%= form.label :学年 %>
    <%= form.select :gakunenn_id, Gakunenn.all.map {|g| [g.gakunenn.to_s + "年" + g.kumi.to_s + "組",g.id] },{}, {class: "form-control"} %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
