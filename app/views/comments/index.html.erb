<p id="notice"><%= notice %></p>

<h1>コメント</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>コメント</th>
      <th>日付</th>
      <th>学年</th>
      <th>組</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.comment %></td>
        <td><%= comment.hiduke %></td>
        <td><%= comment.gakunenn.gakunenn %></td>
        <td><%= comment.gakunenn.kumi %></td>
        <td><%= link_to '参照', comment %></td>
        <td><%= link_to '編集', edit_comment_path(comment) %></td>
        <td><%= link_to '削除', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'コメント追加', new_comment_path %>
