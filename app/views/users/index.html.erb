<p id="notice"><%= notice %></p>

<h1>ユーザー</h1>

<table>
  <thead>
    <tr>
      <th>氏名</th>
      <th>番号</th>
      <th>権限</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.banngou %></td>
        <td><%= user.kengen %></td>
        <td><%= link_to '参照', user %></td>
        <td><%= link_to '編集', edit_user_path(user) %></td>
        <td><%= link_to '削除', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'ユーザー追加', new_user_path,{class: "btn btn-default btn-sm btn-block"} %>
