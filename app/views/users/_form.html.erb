    <%= form.label :番号 %>
    <%= form.number_field :banngou, {id: :user_banngou,class: "form-control"} %>
  </div>

  <div class="field">
    <%= form.label :パスワード %>
    <%= form.text_field :password, {id: :user_password,class: "form-control"} %>
  </div>

  <div class="field">
    <%= form.label :パスワード %>
    <%= form.text_field :password_confirmation, {id: :user_password_confirmation,class: "form-control"} %>
  </div>

  <div class="field">
    <%= form.label :権限 %>
    <%= form.number_field :kengen, {id: :user_kengen,class: "form-control"} %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
