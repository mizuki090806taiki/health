<p id="notice"><%= notice %></p>

<h1>健康記録</h1>

<table>
  <thead>
    <tr>
      <th>日付</th>
      <th>欠席</th>
      <th>病欠</th>
      <th>事故欠</th>
      <th>出席停止</th>
      <th>遅刻</th>
      <th>忌引</th>
      <th>学年</th>
      <th>生徒</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kennkoukirokus.each do |kennkoukiroku| %>
      <tr>
        <td><%= kennkoukiroku.hiduke %></td>
        <td><%= kennkoukiroku.kesseki %></td>
        <td><%= kennkoukiroku.byouketu_id %></td>
        <td><%= kennkoukiroku.zikoketu %></td>
        <td><%= kennkoukiroku.syuttei %></td>
        <td><%= kennkoukiroku.tikoku_id %></td>
        <td><%= kennkoukiroku.kibiki %></td>
        <td><%= kennkoukiroku.gakunenn_id %></td>
        <td><%= kennkoukiroku.seito_id %></td>
        <td><%= link_to '参照', kennkoukiroku %></td>
        <td><%= link_to '編集', edit_kennkoukiroku_path(kennkoukiroku) %></td>
        <td><%= link_to '削除', kennkoukiroku, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '健康記録追加', new_kennkoukiroku_path %>
